---
export interface Props {
	url: string;
	thumbnail: string;
	line: string;
	index: number;
}

const { url, thumbnail, line, index } = Astro.props;
---

<div class="shrink-0 flex flex-col snap-center justify-center leading-[0]">
	{index == 0 && (
		<div class="absolute select-none top-28 left-16 z-[1] indent-72 right-1/3 text-white text-[110px] uppercase font-black italic leading-[1]">
			Une main lave l'autre
		</div>
	)}
	<p class="invisible ml-[25%] whitespace-wrap text-5xl font-semibold mt-3 w-[750px] font-rama-gothic">
		"{line}"
	</p>
	<a href={url} target="_blank">
		<img
			src={thumbnail}
			class="z-[2] relative shrink-0 w-[1000px] object-center object-cover h-[500px]"
		>
	</a>
	<p class="ml-[25%] whitespace-wrap text-5xl font-semibold mt-3 w-[750px] font-rama-gothic">
		"{line}"
	</p>
	{index == 0 && (
		<div class="absolute select-none top-28 left-16 z-[3] indent-72 right-1/3 mix-blend-difference text-white text-[110px] uppercase font-black italic leading-[1]">
			Une main lave l'autre
		</div>
	)}
</div>
