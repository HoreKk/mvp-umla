---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html, body {
		height: 100%;
	}

	@font-face {
		font-family: 'Kanit';
		src: url('/fonts/Kanit/Kanit-Regular.ttf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Kanit';
		src: url('/fonts/Kanit/Kanit-BlackItalic.ttf');
		font-weigh: bolder;
		font-style: italic;
		font-display: swap;
	}
</style>
