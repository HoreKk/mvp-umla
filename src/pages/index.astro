---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="UMLA - Alpha Wann">
	<main class="relative">
		<div class="h-full">
			<img src="/alpha_wann.png" alt="UMLA Alpha Wann" class="absolute h-full" />
			<h2 class="absolute bottom-10 left-12 mix-blend-difference leading-[.8] right-1/3 text-[185px] italic uppercase text-white font-black">
				Une main lave l'autre
			</h2>
			<div class="flex fixed w-full items-center justify-between px-10 py-5">
				<h1 class="text-5xl text-umla-yellow font-extrabold italic">UMLA</h1>
				<div class="flex items-center gap-6">
					<button class="uppercase">
						Don Dada
					</button>
					<button class="bg-umla-yellow py-1 px-6 uppercase">
						Concerts
					</button>
				</div>
			</div>
		</div>
		<div class="bg-black h-full">

		</div>
	</main>
</Layout>

<style>

	main {
		height: 100%;
		background: rgb(42,133,184);
		background: linear-gradient(180deg, rgba(42,133,184,1) 0%, rgba(69,163,157,1) 50%, rgba(193,178,118,1) 85%);
	}
</style>